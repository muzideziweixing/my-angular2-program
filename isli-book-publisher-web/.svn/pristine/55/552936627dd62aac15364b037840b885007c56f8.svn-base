<ng-container>
  <div *ngIf="!checkDetailsFlag">
    <tl-checking-query-form   (onQuery)="query($event)"></tl-checking-query-form>
    <tl-checking-total        [checkTotalBarValue]="checkTotalBarValue"></tl-checking-total>
    <tl-checking-data-table   [dataTableValue]="dataTableValue" 
                              [pagingBoxObj]="pagingBoxObj"
                              (onPageChange)="pageChange($event)" 
                              (onClickDetails)="clickDetails($event)" ></tl-checking-data-table>
  </div>
  <div *ngIf="checkDetailsFlag">
    <tl-checking-details      [detailsId]="detailsId"></tl-checking-details>
  </div>
</ng-container>
