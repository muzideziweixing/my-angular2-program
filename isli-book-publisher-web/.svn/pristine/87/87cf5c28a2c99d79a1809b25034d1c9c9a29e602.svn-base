.detailBoom{ width: 482px;height: 248px; margin: -124px 0 0 -241px; position: fixed; left: 50%; top: 50%; z-index: 9999; background: #fff;}
.detailBoom h5{  width: 100%; height: 47px; line-height: 47px; padding-left: 10px; background: #e1e1e1; border-bottom: 1px solid #b8b8b8; border-top-left-radius: 3px; border-bottom-right-radius: 3px; box-sizing: border-box; color: #696969;}
.goods_detail{ padding: 29px 0 0 0;}
.goods_detail dl{ width: 100%; height: auto; padding-bottom: 10px;}
.goods_detail dl,.goods_detail dl dt,.goods_detail dl dd{ float: left;}
.goods_detail dl dt{ width: 138px; height: 26px; line-height:26px; text-align: right; color: #5e5e5e; }
.goods_detail dl dd{ width: 272px; height: auto; border: 1px solid #c7c7c7;}
.goods_detail dl dt,.goods_detail_boom dl dd,.goods_detail_boom dl dd a{ line-height:26px;}
.goods_detail dl dd a{ color: #7e7e7e; line-height: 26px; display: block; padding: 0 10px;  word-break: break-all; word-wrap: break-word;}
.goods_detail dl dd a:last-child{ line-height: 22px;}
.closeboom{ width:50px; height: 47px; position:absolute; top:0; right:0; background: url(/assets/images/closebg.png) center center no-repeat; cursor: pointer;}

.bg{ background: rgba(0, 0, 0, .3); position: absolute; left: 0; top: 0; width: 100%; height: 100%; z-index: 9998;}
