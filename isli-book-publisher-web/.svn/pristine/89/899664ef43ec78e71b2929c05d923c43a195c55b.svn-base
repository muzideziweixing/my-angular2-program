.prompts-box-position{ width:100%; height:100%; position: fixed; background: rgba(0,0,0,0.5); z-index:999; }
.prompts-box { background: #3D3D3D url(/assets/images/prompts-box/success.png) no-repeat center 13px;
  width: 140px; height: 90px; position: fixed; top: 30%; left: 50%; margin: -45px 0 0 -70px; }
