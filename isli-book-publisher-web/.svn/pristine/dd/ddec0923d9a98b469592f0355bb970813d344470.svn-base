<ng-container>
    <div *ngIf="!settlementDetailsFlag">
        <tl-settlement-query-form   (onQuery)="query($event)"></tl-settlement-query-form>
        <tl-settlement-data-table   [dataTableValue]="dataTableValue" 
                                    [pagingBoxObj]="pagingBoxObj" 
                                    (onPageChange)="pageChange($event)"
                                    (onClickDetails)="clickDetails($event)">
                                    </tl-settlement-data-table>
    </div>
    <div *ngIf="settlementDetailsFlag">
        <tl-settlement-details      [detailsStatus]="detailsStatus" 
                                    [detailsId]="detailsId" 
                                    [detailsInfo]="detailsInfo">
                                    </tl-settlement-details>
    </div>
</ng-container>